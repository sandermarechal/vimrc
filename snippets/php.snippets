global !p

def getArgs(group):
    import re
    word = re.compile('([\w\\\\]+ )?(\$\w+)')
    comma = re.compile(', ?')
    args = []

    for arg in comma.split(group):
        m = word.match(arg)
        if m:
            args.append([m.group(1), m.group(2)])

    return args

endglobal

